<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/item_name_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_urgency_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.65"
        android:gravity="center"
        android:text="@string/item_name_text"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/item_urgency_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_name_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.35"
        android:gravity="center"
        android:text="@string/item_urgency_text"
        android:textSize="20sp"
        android:textColor="#ff0000"/>

</androidx.constraintlayout.widget.ConstraintLayout>